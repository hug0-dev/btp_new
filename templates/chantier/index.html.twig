{% extends 'base.html.twig' %}

{% block title %}Liste des Chantiers{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    {% if app.user.isAdmin %}
                        Gestion des Chantiers
                    {% else %}
                        Mes Chantiers
                    {% endif %}
                </h1>
                {% if app.user.isAdmin %}
                    <a href="{{ path('app_chantier_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nouveau Chantier
                    </a>
                {% endif %}
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if chantiers|length > 0 %}
                <div class="row">
                    {% for chantier in chantiers %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                {% if chantier.image %}
                                    <img src="{{ asset('uploads/images/' ~ chantier.image) }}" 
                                         class="card-img-top" style="height: 200px; object-fit: cover;">
                                {% endif %}
                                
                                <div class="card-header">
                                    <h5 class="mb-0">{{ chantier.nom }}</h5>
                                </div>
                                
                                <div class="card-body">
                                    <div class="mb-2">
                                        <strong>Période:</strong><br>
                                        <small>{{ chantier.dateDebut|date('d/m/Y') }} - {{ chantier.dateFin|date('d/m/Y') }}</small>
                                    </div>

                                    <div class="mb-2">
                                        <strong>Effectif requis:</strong>
                                        <span class="badge bg-primary">{{ chantier.effectifRequis }}</span>
                                    </div>

                                    {% if chantier.chefChantier %}
                                        <div class="mb-2">
                                            <strong>Chef de chantier:</strong><br>
                                            <span class="badge bg-warning">{{ chantier.chefChantier.nom }}</span>
                                        </div>
                                    {% endif %}

                                    <div class="mb-2">
                                        <strong>Compétences requises:</strong><br>
                                        {% if chantier.chantierPrerequis is defined and chantier.chantierPrerequis is not empty %}
                                            <div style="max-height: 50px; overflow: hidden;">
                                                {% for competence in chantier.chantierPrerequis|slice(0, 2) %}
                                                    <span class="badge bg-secondary me-1 mb-1">{{ competence }}</span>
                                                {% endfor %}
                                                {% if chantier.chantierPrerequis|length > 2 %}
                                                    <span class="badge bg-info">+{{ chantier.chantierPrerequis|length - 2 }}</span>
                                                {% endif %}
                                            </div>
                                        {% else %}
                                            <span class="text-muted">Aucune</span>
                                        {% endif %}
                                    </div>

                                    {% if app.user.isAdmin %}
                                        <div class="mb-2">
                                            <strong>Effectif restant:</strong>
                                            <span class="badge bg-{{ chantier.effectifRestant > 0 ? 'success' : 'danger' }}">
                                                {{ chantier.effectifRestant }}
                                            </span>
                                        </div>
                                    {% endif %}
                                </div>
                                
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('app_chantier_show', {'id': chantier.id}) }}" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Voir
                                        </a>
                                        {% if app.user.isAdmin %}
                                            <a href="{{ path('app_chantier_edit', {'id': chantier.id}) }}" 
                                               class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-edit"></i> Modifier
                                            </a>
                                            {% if chantier.effectifRestant > 0 %}
                                                <a href="{{ path('app_affectation_new', {'id': chantier.id}) }}" 
                                                   class="btn btn-outline-success btn-sm">
                                                    <i class="fas fa-plus"></i> Affecter
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-building fa-3x text-muted mb-3"></i>
                    <p class="text-muted">
                        {% if app.user.isAdmin %}
                            Aucun chantier trouvé.
                        {% else %}
                            Aucun chantier assigné pour le moment.
                        {% endif %}
                    </p>
                    {% if app.user.isAdmin %}
                        <a href="{{ path('app_chantier_new') }}" class="btn btn-primary">Créer le premier chantier</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
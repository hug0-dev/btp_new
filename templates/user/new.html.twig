{# templates/user/new.html.twig - Version améliorée #}
{% extends 'base.html.twig' %}

{% block title %}Nouvel Utilisateur{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .competences-select {
        min-height: 200px !important;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        background: white;
    }
    
    .competences-select:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.2rem rgba(94, 173, 249, 0.25);
    }
    
    .competences-select option {
        padding: 8px 12px;
        border-bottom: 1px solid #f8f9fa;
    }
    
    .competences-select option:hover {
        background-color: #f8f9fa;
    }
    
    .competences-select option:checked {
        background-color: var(--secondary-color);
        color: white;
    }
    
    .form-help {
        font-size: 0.875em;
        color: #6c757d;
        margin-top: 5px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Créer un nouvel utilisateur</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.plainPassword) }}
                                    {{ form_widget(form.plainPassword) }}
                                    {{ form_errors(form.plainPassword) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.equipe) }}
                                    {{ form_widget(form.equipe) }}
                                    {{ form_errors(form.equipe) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.roles) }}
                                    <div class="mt-2">
                                        {{ form_widget(form.roles) }}
                                    </div>
                                    {{ form_errors(form.roles) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.competences, 'Compétences') }}
                                    {{ form_widget(form.competences, {'attr': {'class': 'form-select competences-select', 'multiple': 'multiple'}}) }}
                                    <div class="form-help">
                                        <i class="fas fa-info-circle me-1"></i>
                                        {{ form.competences.vars.help }}
                                    </div>
                                    {{ form_errors(form.competences) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Créer
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{# templates/user/edit.html.twig - Version améliorée #}
{% extends 'base.html.twig' %}

{% block title %}Modifier - {{ user.nom }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .competences-select {
        min-height: 200px !important;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        background: white;
    }
    
    .competences-select:focus {
        border-color: var(--secondary-color);
        box-shadow: 0 0 0 0.2rem rgba(94, 173, 249, 0.25);
    }
    
    .competences-select option {
        padding: 8px 12px;
        border-bottom: 1px solid #f8f9fa;
    }
    
    .competences-select option:hover {
        background-color: #f8f9fa;
    }
    
    .competences-select option:checked {
        background-color: var(--secondary-color);
        color: white;
    }
    
    .form-help {
        font-size: 0.875em;
        color: #6c757d;
        margin-top: 5px;
    }
    
    .current-competences {
        background-color: #e8f4f8;
        border: 1px solid #b8daff;
        border-radius: 6px;
        padding: 10px;
        margin-bottom: 15px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Modifier l'utilisateur: {{ user.nom }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.nom) }}
                                    {{ form_widget(form.nom) }}
                                    {{ form_errors(form.nom) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.plainPassword) }}
                                    {{ form_widget(form.plainPassword) }}
                                    {{ form_errors(form.plainPassword) }}
                                    <div class="form-help">{{ form.plainPassword.vars.help }}</div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.equipe) }}
                                    {{ form_widget(form.equipe) }}
                                    {{ form_errors(form.equipe) }}
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-3">
                                    {{ form_label(form.roles) }}
                                    <div class="mt-2">
                                        {{ form_widget(form.roles) }}
                                    </div>
                                    {{ form_errors(form.roles) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.competences, 'Compétences') }}
                                    
                                    {# Affichage des compétences actuelles #}
                                    {% if user.userCompetences|length > 0 %}
                                        <div class="current-competences">
                                            <small class="text-muted d-block mb-2">
                                                <i class="fas fa-info-circle"></i> Compétences actuelles:
                                            </small>
                                            {% for userCompetence in user.userCompetences %}
                                                <span class="badge bg-secondary me-1">{{ userCompetence.competence.nom }}</span>
                                            {% endfor %}
                                        </div>
                                    {% endif %}
                                    
                                    {{ form_widget(form.competences, {'attr': {'class': 'form-select competences-select', 'multiple': 'multiple'}}) }}
                                    <div class="form-help">
                                        <i class="fas fa-info-circle me-1"></i>
                                        {{ form.competences.vars.help }}
                                    </div>
                                    {{ form_errors(form.competences) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
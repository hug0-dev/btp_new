{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Gestion des Utilisateurs</h1>
                <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvel Utilisateur
                </a>
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if users|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Rôles</th>
                                <th>Équipe</th>
                                <th>Compétences</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.nom }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>
                                        {% for role in user.roles %}
                                            <span class="badge bg-{{ role == 'ROLE_ADMIN' ? 'danger' : 'primary' }}">
                                                {{ role == 'ROLE_ADMIN' ? 'Admin' : 'User' }}
                                            </span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if user.equipe %}
                                            <span class="badge bg-info">{{ user.equipe.nomEquipe }}</span>
                                        {% else %}
                                            <span class="text-muted">Aucune</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% for userCompetence in user.userCompetences %}
                                            <span class="badge bg-secondary me-1">{{ userCompetence.competence.nom }}</span>
                                        {% endfor %}
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur?')" 
                                                  class="d-inline">
                                                <button class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">Aucun utilisateur trouvé.</p>
                    <a href="{{ path('app_user_new') }}" class="btn btn-primary">Créer le premier utilisateur</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Modifier - {{ user.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Modifier l'utilisateur: {{ user.nom }}</h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.nom) }}
                            {{ form_widget(form.nom) }}
                            {{ form_errors(form.nom) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.email) }}
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.plainPassword) }}
                            {{ form_widget(form.plainPassword) }}
                            {{ form_errors(form.plainPassword) }}
                            <div class="form-text">{{ form.plainPassword.vars.help }}</div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.roles) }}
                            {{ form_widget(form.roles) }}
                            {{ form_errors(form.roles) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.competences) }}
                            <div class="row">
                                {{ form_widget(form.competences) }}
                            </div>
                            {{ form_errors(form.competences) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.equipe) }}
                            {{ form_widget(form.equipe) }}
                            {{ form_errors(form.equipe) }}
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Mettre Ã  jour
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
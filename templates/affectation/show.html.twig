{% extends 'base.html.twig' %}

{% block title %}Détails de l'Affectation{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Détails de l'Affectation</h3>
                    {% if app.user.isAdmin %}
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_affectation_edit', {'id': affectation.id}) }}" 
                               class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            <form method="post" 
                                  action="{{ path('app_affectation_delete', {'id': affectation.id}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette affectation ?')"
                                  style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>
                
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="mb-0">Chantier</h5>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title">{{ affectation.chantier.nom }}</h6>
                                    
                                    <p class="card-text">
                                        <strong>Période:</strong><br>
                                        {{ affectation.chantier.dateDebut|date('d/m/Y') }} - 
                                        {{ affectation.chantier.dateFin|date('d/m/Y') }}
                                    </p>
                                    
                                    <p class="card-text">
                                        <strong>Effectif requis:</strong>
                                        <span class="badge bg-primary">{{ affectation.chantier.effectifRequis }}</span>
                                    </p>
                                    
                                    {% if affectation.chantier.chefChantier %}
                                        <p class="card-text">
                                            <strong>Chef de chantier:</strong><br>
                                            <span class="badge bg-warning">{{ affectation.chantier.chefChantier.nom }}</span>
                                        </p>
                                    {% endif %}
                                    
                                    <p class="card-text">
                                        <strong>Compétences requises:</strong><br>
                                        {% if affectation.chantier.chantierPrerequis is not empty %}
                                            {% for competence in affectation.chantier.chantierPrerequis %}
                                                <span class="badge bg-secondary me-1">{{ competence }}</span>
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">Aucune</span>
                                        {% endif %}
                                    </p>
                                    
                                    <a href="{{ path('app_chantier_show', {'id': affectation.chantier.id}) }}" 
                                       class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i> Voir le chantier
                                    </a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h5 class="mb-0">Équipe Affectée</h5>
                                </div>
                                <div class="card-body">
                                    <h6 class="card-title">{{ affectation.equipe.nomEquipe }}</h6>
                                    
                                    <p class="card-text">
                                        <strong>Nombre de membres:</strong>
                                        <span class="badge bg-success">{{ affectation.equipe.nombre }}</span>
                                    </p>
                                    
                                    {% if affectation.equipe.chefEquipe %}
                                        <p class="card-text">
                                            <strong>Chef d'équipe:</strong><br>
                                            <span class="badge bg-info">{{ affectation.equipe.chefEquipe.nom }}</span>
                                        </p>
                                    {% endif %}
                                    
                                    <p class="card-text">
                                        <strong>Compétences de l'équipe:</strong><br>
                                        {% set competencesEquipe = affectation.equipe.competences %}
                                        {% if competencesEquipe is not empty %}
                                            {% for competence in competencesEquipe %}
                                                <span class="badge bg-success me-1">{{ competence }}</span>
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">Aucune compétence</span>
                                        {% endif %}
                                    </p>
                                    
                                    <div class="mt-3">
                                        <strong>Membres:</strong>
                                        <ul class="list-group list-group-flush mt-2">
                                            {% for user in affectation.equipe.users %}
                                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                                    {{ user.nom }}
                                                    {% if user == affectation.equipe.chefEquipe %}
                                                        <span class="badge bg-primary">Chef</span>
                                                    {% endif %}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    
                                    <a href="{{ path('app_equipe_show', {'id': affectation.equipe.id}) }}" 
                                       class="btn btn-outline-success btn-sm mt-2">
                                        <i class="fas fa-eye"></i> Voir l'équipe
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <a href="{{ path('app_affectation_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Retour à la liste
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
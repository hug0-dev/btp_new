{% extends 'base.html.twig' %}

{% block title %}
    {% if app.user.isAdmin %}Gestion des Affectations{% else %}Mes Affectations{% endif %}
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>
                    {% if app.user.isAdmin %}
                        Gestion des Affectations
                    {% else %}
                        Mes Affectations
                    {% endif %}
                </h1>
                {% if app.user.isAdmin %}
                    <div class="btn-group">
                        <a href="{{ path('app_chantier_index') }}" class="btn btn-outline-primary">
                            <i class="fas fa-building"></i> Voir les chantiers
                        </a>
                    </div>
                {% endif %}
            </div>

            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            {% if affectations|length > 0 %}
                <div class="row">
                    {% for affectation in affectations %}
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="mb-0">{{ affectation.chantier.nom }}</h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <strong>Équipe assignée:</strong><br>
                                        <span class="badge bg-info">{{ affectation.equipe.nomEquipe }}</span>
                                        <small class="text-muted">({{ affectation.equipe.nombre }} membres)</small>
                                    </div>

                                    <div class="mb-3">
                                        <strong>Chef d'équipe:</strong><br>
                                        {% if affectation.equipe.chefEquipe %}
                                            <span class="badge bg-warning">{{ affectation.equipe.chefEquipe.nom }}</span>
                                        {% else %}
                                            <span class="text-muted">Non assigné</span>
                                        {% endif %}
                                    </div>

                                    <div class="mb-3">
                                        <strong>Chantier:</strong><br>
                                        <small>{{ affectation.chantier.dateDebut|date('d/m/Y') }} - {{ affectation.chantier.dateFin|date('d/m/Y') }}</small>
                                    </div>

                                    <div class="mb-3">
                                        <strong>Membres de l'équipe:</strong><br>
                                        {% for user in affectation.equipe.users %}
                                            <small class="d-block">• {{ user.nom }}</small>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a href="{{ path('app_affectation_show', {'id': affectation.id}) }}" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Détails
                                        </a>
                                        <a href="{{ path('app_chantier_show', {'id': affectation.chantier.id}) }}" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-building"></i> Chantier
                                        </a>
                                        {% if app.user.isAdmin %}
                                            <form method="post" action="{{ path('app_affectation_delete', {'id': affectation.id}) }}" 
                                                  onsubmit="return confirm('Êtes-vous sûr?')" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ affectation.id) }}">
                                                <button class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                    <p class="text-muted">
                        {% if app.user.isAdmin %}
                            Aucune affectation trouvée.
                        {% else %}
                            Aucune affectation pour le moment.
                        {% endif %}
                    </p>
                    {% if app.user.isAdmin %}
                        <p class="text-muted">Les affectations se font depuis la page des chantiers.</p>
                        <a href="{{ path('app_chantier_index') }}" class="btn btn-primary">Voir les chantiers</a>
                    {% endif %}
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Détails de l'Équipe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Détails de l'Équipe</h1>
    
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row">Nom de l'équipe</th>
                        <td>{{ equipe.nomEquipe }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Compétences de l'équipe</th>
                        <td>
                            {% if equipe.competences is not empty %}
                                {% for competence in equipe.competences %}
                                    <span class="badge bg-success me-1">{{ competence }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucune compétence</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Nombre de membres</th>
                        <td>{{ equipe.nombre }}</td>
                    </tr>
                    <tr>
                        <th scope="row">Chef d'équipe</th>
                        <td>{{ equipe.chefEquipe ? equipe.chefEquipe.nom : 'Aucun' }}</td>
                    </tr>
                </tbody>
            </table>

            <!-- Liste des membres de l'équipe -->
            <h4 class="mt-4">Membres de l'Équipe</h4>
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Compétences</th>
                        <th>Rôle</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in equipe.users %}
                    <tr>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.userCompetences is not empty %}
                                {% for userCompetence in user.userCompetences %}
                                    <span class="badge bg-info me-1">{{ userCompetence.competence.nom }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucune compétence</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.isAdmin %}
                                <span class="badge bg-danger">Admin</span>
                            {% else %}
                                <span class="badge bg-primary">Utilisateur</span>
                            {% endif %}
                            {% if equipe.chefEquipe and equipe.chefEquipe.id == user.id %}
                                <span class="badge bg-warning">Chef d'équipe</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun membre associé à cette équipe</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>

            <!-- Affectations de l'équipe -->
            {% if equipe.affectations is not empty %}
            <h4 class="mt-4">Affectations de l'Équipe</h4>
            <div class="row">
                {% for affectation in equipe.affectations %}
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">{{ affectation.chantier.nom }}</h6>
                            <p class="card-text">
                                <strong>Période :</strong> 
                                {{ affectation.chantier.dateDebut|date('d/m/Y') }} - 
                                {{ affectation.chantier.dateFin|date('d/m/Y') }}
                            </p>
                            <p class="card-text">
                                <strong>Effectif requis :</strong> {{ affectation.chantier.effectifRequis }}
                            </p>
                            {% if affectation.chantier.chantierPrerequis is not empty %}
                            <p class="card-text">
                                <strong>Compétences requises :</strong>
                                {% for prerequis in affectation.chantier.chantierPrerequis %}
                                    <span class="badge bg-secondary me-1">{{ prerequis }}</span>
                                {% endfor %}
                            </p>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
            {% endif %}

            <div class="d-flex justify-content-between mt-4">
                <a href="{{ path('app_equipe_index') }}" class="btn btn-secondary">Retour à la liste</a>
                <a href="{{ path('app_equipe_edit', {'id': equipe.id}) }}" class="btn btn-primary">Éditer</a>
            </div>
        </div>
    </div>

    <div class="mt-3">
        {{ include('equipe/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}